<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:background="@color/white"
    android:elevation="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvDateSoiCauItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Kỳ: 201118246"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBachThuLoSoiCauItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Bạch thủ lô: 18"
                android:textColor="@color/colorVinID"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSongThuLoSoiCauItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Song thủ lô: 12 21"
                android:textColor="@color/colorXanhChild"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBaMienSoiCauItem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Miền Bắc"
                android:textColor="@color/colorXanhChild"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnEditSoiCauItem"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_22sdp"
                android:layout_gravity="center|right"
                android:background="@drawable/shape_bg_bovien_button_xam"
                android:text="@string/sua"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>